#!/bin/bash

REPLY=x

usage(){
  echo "$(basename $0) [-y] [<branch>]" >&2
  exit 1
}

while getopts ":y" opt; do
  case $opt in
    y)
      REPLY=y
      ;;
    \?)
      echo "Unknown option: -$OPTARG" >&2
      usage
      ;;
    :)
      echo "-$OPTARG requires an argument." >&2
      usage
      ;;
  esac
done
shift $(($OPTIND - 1))

BRANCH=$1
if [[ -z "$BRANCH" ]]; then
  BRANCH=`git rev-parse --abbrev-ref HEAD`
fi

BRANCHES=`git branch --merged $BRANCH | grep -v "${BRANCH}$"`

if [[ -z "$BRANCHES" ]]; then
  echo "$BRANCH has no fully merged branches."
else
  if [ "$REPLY" == "x" ]; then
    echo "The following branches are fully merged into $BRANCH and will be removed:"
    for branch in $BRANCHES; do echo $branch; done
    read -p "Continue (y/n)? "
  fi

  if [ "$REPLY" == "y" ]; then
    for branch in $BRANCHES; do 
      git branch -d $branch
    done
  fi
fi